global
    log 127.0.0.1 local0
    log 127.0.0.1 local1 notice
    maxconn 4096
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    retries 3
    option redispatch
    maxconn 2000
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http-in
    bind *:80
    default_backend servers

backend servers
    mode http
    balance roundrobin
    cookie SERVERID insert indirect nocache
    server server1 IP_VM_1:80 check
    server server2 IP_VM_2:80 check
    server server3 IP_VM_3:80 check

listen stats
    bind :1936
    mode http
    stats enable
    stats uri /haproxy?stats
    stats realm Haproxy\ Statistics
    stats auth root:1234
